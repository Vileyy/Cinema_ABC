<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div id="carousel1" class="carousel slide">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <li data-target="#carousel1" data-slide-to="@i" @(i == 0 ? "class=active" : "")></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @foreach (var sl in Model)
                    {
                        <div class="item @(sl == Model.First() ? "active" : "")">
                            <a href="@Url.Action("detailsPhim", "TrangChu", new { Id_Phim = @sl.Id_Phim })"><img class="img-responsive" src="~/Images/Slider/@sl.AnhSlider" alt="thumb"></a>
                        </div>
                    }
                </div>
                <a class="left carousel-control" href="#carousel1" data-slide="prev">
                    <span class="icon-prev"></span>
                </a>
                <a class="right carousel-control" href="#carousel1" data-slide="next">
                    <span class="icon-next"></span>
                </a>
            </div>
        </div>
    </div>
</div>


