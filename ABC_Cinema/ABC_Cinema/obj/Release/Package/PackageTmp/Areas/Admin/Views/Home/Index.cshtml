
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<style>
    body {
        background-color: #f5f5f5;
    }

    h3 {
        text-align: center;
        font-weight: bold;
    }

    .container {
        margin-top: 20px;
    }

    .table-container {
        background-color: #ffffff;
        padding: 20px;
        margin-bottom: 20px;
    }

    th {
        background-color: #5584FF;
        color: white;
    }
</style>

<div class="flex-box-2">
    <div>
        <a href="@Url.Action("Index","TrangTin")" class="btn btn-success" role="button"><span class="fa fa-newspaper-o"></span> Trang tin</a>
        <a href="@Url.Action("Index","Menu")" class="btn btn-success" role="button"><span class="fa fa-bars"></span> Menu</a>
        <a href="@Url.Action("Index","Sliders")" class="btn btn-success" role="button"><span class="fa fa-sliders"></span> Sliders</a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 table-container" style="border-right: 1px solid #000;">
            <h3>DOANH THU THEO PHIM</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <th>Phim</th>
                    <th>Lượt vé</th>
                    <th>Doanh thu</th>
                    </thead>
                    @foreach (var item in ViewData["ThongKe_Phim"] as List<ABC_Cinema.ViewModel.ThongKe_PhimViewModel>)
                    {
                        <tbody>
                        <tr>
                            <td>@item.TenPhim</td>
                            <td>@item.LuotVe</td>
                            <td>@item.DoanhThu.ToString().Replace(".00", "") VNĐ</td>
                        </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>

        <div class="col-md-6 table-container">
            <h3>DOANH THU THEO RẠP</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <th>Rạp</th>
                    <th>Số lượng phòng</th>
                    <th>Doanh thu</th>
                    </thead>
                    @foreach (var item in ViewData["ThongKe_Rap"] as List<ABC_Cinema.ViewModel.ThongKe_RapViewModel>)
                    {
                        <tbody>
                        <tr>
                            <td>@item.TenRap</td>
                            <td>@item.SoPhong</td>
                            <td>@item.DoanhThu.ToString().Replace(".00", "") VNĐ</td>
                        </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>