@model ABC_Cinema.Models.Slider
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>THÊM SLIDERS</h2>

@using (Html.BeginForm("Edit", "Sliders", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã slider:</label>
            <div class="col-md-10">
                <input type="text" size="50" name="iMaSlider" value="@Model.Id_Slider" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên phim:</label>
            <div class="col-md-10">
                @Html.DropDownList("MaPhim")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />
                <img src="~/Images/Slider/@Model.AnhSlider" width="120"> (Ảnh hiện tại)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SLIDERS", "Index")
</div>