@model ABC_Cinema.Models.LichChieu
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3 style="color: red; font-weight: bold;">Bạn quyết định xóa lịch chiếu này?</h3>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên phim:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phim.TenPhim)
        </dd>

        <dt>
            Tên rạp:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RapPhim.TenRapChieu)
        </dd>

        <dt>
            Tên phòng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phong.TenPhong)
        </dd>

        <dt>
            Ngày chiếu:
        </dt>

        <dd>
            @Html.FormatValue(@Model.NgayChieu, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Giờ bắt đầu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioBatDau)
        </dd>

        <dt>
            Giờ kết thúc:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioKetThuc)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> | @Html.ActionLink("VỀ TRANG QUẢN LÝ LỊCH CHIẾU", "Index")
        </div>
    }
</div>