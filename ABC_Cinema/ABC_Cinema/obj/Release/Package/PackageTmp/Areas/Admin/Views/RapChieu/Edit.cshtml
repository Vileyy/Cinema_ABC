@model ABC_Cinema.Models.RapPhim
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN RẠP CHIẾU</h2>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>
@using (Html.BeginForm("Edit", "RapChieu", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã rạp chiếu:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaRap" value="@Model.Id_RapChieu" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên rạp chiếu:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenRap" value="@Model.TenRapChieu"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tổng số phòng:</label>
            <div class="col-md-10">
                <input type="number" name="iSoLuong"
                       value="@Model.TongSoPhong" readonly/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tỉnh/Thành:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenTP" value="@Model.ThanhPho"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Quận/Huyện:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenQH" value="@Model.QuanHuyen"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Phường/Xã:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenPX" value="@Model.PhuongXa"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Giờ mở cửa:</label>
            <div class="col-md-10">
                <input type="time" name="tGioMoCua" value="@Model.GioMoCua" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Giờ đóng cửa:</label>
            <div class="col-md-10">
                <input type="time" name="tGioDongCua" value="@Model.GioDongCua" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ RẠP CHIẾU", "Index")
</div>