@model ABC_Cinema.Models.Phim
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3 style="color: red; font-weight: bold;">Bạn quyết định xóa phim này?</h3>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên phim:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenPhim)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd>
            @Html.Raw(@Model.MoTa.ToString())
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img style="width: 200px; margin-bottom: 20px;" src="~/Images/Upload/@Model.AnhPhim" alt=" @Model.TenPhim">
        </dd>

        <dt>
            Thể loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiPhim.TenLoai)
        </dd>
        <dt>
            Độ tuổi:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)
        </dd>

        <dt>
            Thời lượng (phút):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ThoiLuong)
        </dd>

        <dt>
            Chất lượng phim:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChatLuong)
        </dd>

        <dt>
            Năm phát hành:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NamPhatHanh)
        </dd>

        <dt>
            Diễn viên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DienVien)
        </dd>

        <dt>
            Đạo diễn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DaoDien)
        </dd>

        <dt>
            Ngày công chiếu:
        </dt>

        <dd>
            @Html.FormatValue(@Model.NgayCongChieu, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Ngày kết thúc:
        </dt>

        <dd>
            @Html.FormatValue(@Model.NgayKetThuc, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @Html.FormatValue(@Model.NgayCapNhat, "{0:dd/MM/yyyy}")
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> | @Html.ActionLink("VỀ TRANG QUẢN LÝ PHIM", "Index")
        </div>
    }
</div>