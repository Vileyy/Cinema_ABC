@model ABC_Cinema.Models.LoaiGhe
@{
    ViewBag.Title = "Edit_LG";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN LOẠI GHẾ</h2>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>
@using (Html.BeginForm("Edit_LG", "PhongChieu", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã loại ghế:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaLG" value="@Model.Id_LoaiGhe" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên loại ghế:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenLG" value="@Model.TenLoaiGhe"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giá ghế (VNĐ):</label>
            <div class="col-md-10">
                <input type="number" min="20000" name="iGiaGhe"
                       value="@Model.GiaGhe" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ LOẠI GHẾ", "Index_LG")
</div>

