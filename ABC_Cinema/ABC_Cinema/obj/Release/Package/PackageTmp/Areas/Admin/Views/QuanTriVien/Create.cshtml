
@model ABC_Cinema.Models.RapPhim
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>THÊM QUẢN TRỊ VIÊN</h2>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>

@using (Html.BeginForm("Create", "QuanTriVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên tài khoản:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenTK" value="@ViewBag.TenTK"
                       required />
                <span class="text-danger">@ViewBag.ErrorTK</span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Mật khẩu:</label>
            <div class="col-md-10">
                <input type="password" size="70" name="sMatKhau" value="@ViewBag.MatKhau"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên QTV:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenQTV" value="@ViewBag.TenQTV"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Giới tính:</label>
            <div class="col-md-10">
                <select name="bGioiTinh" required>
                    <option selected="">-- Chọn giới tính --</option>
                    <option value="1">Nam</option>
                    <option value="0">Nữ</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ngày sinh:</label>
            <div class="col-md-10">
                <input type="date" name="dNgaySinh" required />
                <span class="text-danger">@ViewBag.NgaySinh</span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDiaChi" value="@ViewBag.DiaChi" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Email:</label>
            <div class="col-md-10">
                <input type="email" size="70" name="sEmail" value="@ViewBag.Email"
                       required />
                <span class="text-danger">@ViewBag.ErrorEmail</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ QUẢN TRỊ VIÊN", "Index")
</div>