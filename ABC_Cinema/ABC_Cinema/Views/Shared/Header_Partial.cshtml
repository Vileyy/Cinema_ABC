<header class="header">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <a href="@Url.Action("Index","TrangChu")"><img src="~/Images/logo.png" class="img-responsive img-rounded imglogo" /></a>
            </div>
            <div class="col-sm-8">
                @using (Html.BeginForm("Search", "Search", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search" }))
                {
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Từ khóa tìm kiếm..." name="searchString">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</header>