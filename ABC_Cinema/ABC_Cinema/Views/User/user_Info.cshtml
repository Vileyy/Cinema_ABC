@model ABC_Cinema.Models.TaiKhoan
@{
    ViewBag.Title = "user_Info";
    Layout = "~/Views/Shared/_CinemaLayout.cshtml";
}

<div class="text-center">
    <h2 style="margin-top: 10px;">@ViewBag.Title_Header</h2>
    <h4 class="text-danger">@Html.Raw(ViewBag.ThongBao)</h4>
</div>
<hr />

<div class="row">
    <div class="col-md-12">
        <div class="form-horizontal">
            @using (Html.BeginForm("user_Info", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <form>
                    <input name="Id_TaiKhoan" type="hidden" value="@Model.Id_TaiKhoan" readonly />
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Username">Tên đăng nhập</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-key">
                                    </i>
                                </div>
                                <input id="Username" name="sTenDN" type="text" value="@Model.TenDangNhap" class="form-control input-md" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Name">Tên người dùng</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user">
                                    </i>
                                </div>
                                <input id="Name" name="sTenKH" type="text" placeholder="Nhập họ và tên" value="@Model.ThongTin.TenNguoiDung" class="form-control input-md" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Gender">Giới tính</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user">
                                    </i>
                                </div>
                                <select name="bGioiTinh" id="Gender" class="form-control input-md" required>
                                    <option @if (Model.ThongTin.GioiTinh == true) { <text> selected</text>
                                        }
                                            value="1">
                                        Nam
                                    </option>
                                    <option @if (Model.ThongTin.GioiTinh == false) { <text> selected</text>
                                        }
                                            value="0">
                                        Nữ
                                    </option>
                                    <option @if (Model.ThongTin.GioiTinh != true && Model.ThongTin.GioiTinh != false) { <text> selected</text>
                                        }
                                            value="">
                                        Chọn giới tính
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Date Of Birth">Ngày sinh</label>
                        <div class="col-md-4">

                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-birthday-cake"></i>
                                </div>
                                @{
                                    string ngaySinhValue = Model.ThongTin.NgaySinh?.ToString("yyyy-MM-dd") ?? string.Empty;
                                }
                                <input type="date" id="Date Of Birth" name="dNgaySinh" value="@ngaySinhValue" class="form-control input-md" required />
                                <span class="text-danger">@ViewBag.NgaySinh</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Address">Địa chỉ</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-male" style="font-size: 20px;"></i>
                                </div>
                                <input id="Address" name="sDiaChi" value="@Model.ThongTin.DiaChi" type="text" placeholder="Nhập địa chỉ" class="form-control input-md" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Email Address">Email</label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-envelope-o"></i>
                                </div>
                                <input id="Email Address" name="sEmail" value="@Model.ThongTin.Email" type="email" placeholder="Nhập email" class="form-control input-md" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Date Of Register">Ngày đăng ký</label>
                        <div class="col-md-4">

                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @{
                                    string ngayDKValue = Model.NgayDangKy?.ToString("yyyy-MM-dd") ?? string.Empty;
                                }
                                <input id="Date Of Register" name="dNgayDK" value="@ngayDKValue" type="date" class="form-control input-md" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <label class="col-md-4 control-label"></label>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-floppy-disk"></span> Cập nhật</button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>