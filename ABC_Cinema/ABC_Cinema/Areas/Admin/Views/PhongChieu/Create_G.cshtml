@model ABC_Cinema.Models.Ghe
@{
    ViewBag.Title = "Create_G";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>THÊM GHẾ</h2>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>

@using (Html.BeginForm("Create_G", "PhongChieu", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên ghế:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenGhe" value="@ViewBag.TenGhe"
                       required />
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-md-2">Loại ghế:</label>
            <div class="col-md-10">
                @Html.DropDownList("MaLG")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ GHẾ", "Index_G")
</div>