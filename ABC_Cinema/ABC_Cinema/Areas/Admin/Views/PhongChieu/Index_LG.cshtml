@using PagedList.Mvc
@model PagedList.IPagedList<ABC_Cinema.Models.LoaiGhe>
@{
    ViewBag.Title = "Index_LG";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
<h3 style="text-align: center; font-weight: bold;">QUẢN LÝ LOẠI GHẾ</h3>
<div class="flex-box-2">
    <div>
        <a href="@Url.Action("Create_LG","PhongChieu")" class="btn btn-success" role="button"><span class="fa fa-plus"></span> Thêm mới</a>
        <a href="@Url.Action("Index_G","PhongChieu")" class="btn btn-warning" role="button"><span class="fa fa-reply"></span> Ghế</a>
    </div>
</div>

<div class="row">
    <div class="">
        <div class="table-responsive">
            <table id="mytable" class="table table-bordred table-striped">
                <thead>
                <th>Tên loại ghế</th>
                <th>Giá ghế (VNĐ)</th>
                <th style="width: 13px;"></th>
                <th style="width: 13px;"></th>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.TenLoaiGhe</td>
                            <td>@item.GiaGhe</td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Sửa"><a href="@Url.Action("Edit_LG", new {id = item.Id_LoaiGhe})" class="btn btn-warning btn-xs" role="button"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Xóa"><a href="@Url.Action("Delete_LG", new {id = item.Id_LoaiGhe})" class="btn btn-danger btn-xs" role="button"><span class="glyphicon glyphicon-trash"></span></a></p></td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>
<div style="text-align: center;">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div style="display: inline;">
        @Html.PagedListPager(Model, page => Url.Action("Index_LG", new { page = page }))
    </div>
</div>