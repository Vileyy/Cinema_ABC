@model ABC_Cinema.Models.Phong
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3 style="color: red; font-weight: bold;">Bạn quyết định xóa phòng chiếu này?</h3>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên phòng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenPhong)
        </dd>

        <dt>
            Tên rạp:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RapPhim.TenRapChieu)
        </dd>

        <dt>
            Loại phòng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiPhong.TenLoaiPhong)
        </dd>

        <dt>
            Loại ghế:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiGhe.TenLoaiGhe)
        </dd>

        <dt>
            Số lượng ghế:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd>
            @Html.Raw(@Model.LoaiPhong.MoTa.ToString())
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> | @Html.ActionLink("VỀ TRANG QUẢN LÝ PHÒNG CHIẾU", "Index")
        </div>
    }
</div>