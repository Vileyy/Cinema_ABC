@model ABC_Cinema.Models.Phong
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN PHÒNG CHIẾU</h2>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>
@using (Html.BeginForm("Edit", "PhongChieu", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã phòng:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaPhong" value="@Model.Id_Phong" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên phòng:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenPhong" value="@Model.TenPhong"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên rạp:</label>
            <div class="col-md-10">
                @Html.DropDownList("MaRap")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Loại phòng:</label>
            <div class="col-md-10">
                @Html.DropDownList("MaLP")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Loại ghế:</label>
            <div class="col-md-10">
                @Html.DropDownList("MaLG")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số lượng ghế:</label>
            <div class="col-md-10">
                <input type="number" min="15" name="iSoLuong"
                       value="@Model.SoLuong" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ PHÒNG CHIẾU", "Index")
</div>