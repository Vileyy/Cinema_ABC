<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/js")
    @Styles.Render("~/Content/Dashboard/css")
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
    @{
        if (Session["Admin"] == null)
        {
            Context.Response.Redirect(Url.Action("Login", "Home"));
        }
    }
    <style>
        .flex-box-2 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0px 20px 0px;
        }
        .custom-link {
            color: black;
            text-decoration: none;
        }
    </style>
</head>
<body class="home">
    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                <div class="logo">
                    <a href="">
                        <img src="~/Images/logo.png" alt="merkery_logo" class="hidden-xs hidden-sm">
                        <img src="" class="visible-xs visible-sm circle-logo">
                    </a>
                </div>
                <div class="navi">
                    <ul>
                        <li @(ViewContext.RouteData.Values["controller"].ToString() == "Home" && (ViewContext.RouteData.Values["action"].ToString() == "Index" || ViewContext.RouteData.Values["action"].ToString() == "Create" || ViewContext.RouteData.Values["action"].ToString() == "Edit" || ViewContext.RouteData.Values["action"].ToString() == "Details" || ViewContext.RouteData.Values["action"].ToString() == "Delete") ? "class=active" : "")>
                            <a href="@Url.Action("Index","Home")">
                                <i class="fa fa-home" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Home</span>
                            </a>
                        </li>
                        <li @(ViewContext.RouteData.Values["controller"].ToString() == "Phim" && (ViewContext.RouteData.Values["action"].ToString() == "Index" || ViewContext.RouteData.Values["action"].ToString() == "Create" || ViewContext.RouteData.Values["action"].ToString() == "Edit" || ViewContext.RouteData.Values["action"].ToString() == "Details" || ViewContext.RouteData.Values["action"].ToString() == "Delete") ? "class=active" : "")>
                            <a href="@Url.Action("Index","Phim")">
                                <i class="fa fa-film" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Phim</span>
                            </a>
                        </li>
                        <li @(ViewContext.RouteData.Values["controller"].ToString() == "RapChieu" && (ViewContext.RouteData.Values["action"].ToString() == "Index" || ViewContext.RouteData.Values["action"].ToString() == "Create" || ViewContext.RouteData.Values["action"].ToString() == "Edit" || ViewContext.RouteData.Values["action"].ToString() == "Details" || ViewContext.RouteData.Values["action"].ToString() == "Delete") ? "class=active" : "")>
                            <a href="@Url.Action("Index","RapChieu")">
                                <i class="fa fa-building" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Rạp chiếu</span>
                            </a>
                        </li>
                        <li @(ViewContext.RouteData.Values["controller"].ToString() == "PhongChieu" && (ViewContext.RouteData.Values["action"].ToString() == "Index" || ViewContext.RouteData.Values["action"].ToString() == "Create" || ViewContext.RouteData.Values["action"].ToString() == "Edit" || ViewContext.RouteData.Values["action"].ToString() == "Details" || ViewContext.RouteData.Values["action"].ToString() == "Delete") ? "class=active" : "")>
                            <a href="@Url.Action("Index","PhongChieu")">
                                <i class="fa fa-calendar-check-o" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Phòng chiếu</span>
                            </a>
                        </li>
                        <li @(ViewContext.RouteData.Values["controller"].ToString() == "LichChieu" && (ViewContext.RouteData.Values["action"].ToString() == "Index" || ViewContext.RouteData.Values["action"].ToString() == "Create" || ViewContext.RouteData.Values["action"].ToString() == "Edit" || ViewContext.RouteData.Values["action"].ToString() == "Details" || ViewContext.RouteData.Values["action"].ToString() == "Delete") ? "class=active" : "")>
                            <a href="@Url.Action("Index","LichChieu")">
                                <i class="fa fa-calendar" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Lịch chiếu</span>
                            </a>
                        </li>
                        <li @(ViewContext.RouteData.Values["controller"].ToString() == "Ve" && (ViewContext.RouteData.Values["action"].ToString() == "Index" || ViewContext.RouteData.Values["action"].ToString() == "Create" || ViewContext.RouteData.Values["action"].ToString() == "Edit" || ViewContext.RouteData.Values["action"].ToString() == "Details" || ViewContext.RouteData.Values["action"].ToString() == "Delete") ? "class=active" : "")>
                            <a href="@Url.Action("Index","Ve")">
                                <i class="fa fa-ticket" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Vé</span>
                            </a>
                        </li>
                        <li @(ViewContext.RouteData.Values["controller"].ToString() == "KhachHang" && (ViewContext.RouteData.Values["action"].ToString() == "Index" || ViewContext.RouteData.Values["action"].ToString() == "Create" || ViewContext.RouteData.Values["action"].ToString() == "Edit" || ViewContext.RouteData.Values["action"].ToString() == "Details" || ViewContext.RouteData.Values["action"].ToString() == "Delete") ? "class=active" : "")>
                            <a href="@Url.Action("Index","KhachHang")">
                                <i class="fa fa-users" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Khách hàng</span>
                            </a>
                        </li>
                        <li @(ViewContext.RouteData.Values["controller"].ToString() == "QuanTriVien" && (ViewContext.RouteData.Values["action"].ToString() == "Index" || ViewContext.RouteData.Values["action"].ToString() == "Create" || ViewContext.RouteData.Values["action"].ToString() == "Edit" || ViewContext.RouteData.Values["action"].ToString() == "Details" || ViewContext.RouteData.Values["action"].ToString() == "Delete") ? "class=active" : "")>
                            <a href="@Url.Action("Index","QuanTriVien")">
                                <i class="fa fa-user" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Quản trị viên</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10 col-sm-11 display-table-cell v-align">
                <!--<button type="button" class="slide-toggle">Slide Toggle</button> -->
                <div class="row">
                    <header>
                        <div class="col-md-7">
                            <nav class="navbar-default pull-left">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target="#side-menu" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                            </nav>
                            <div class="search hidden-xs hidden-sm">
                                <input type="text" placeholder="Search" id="search">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="header-rightside">
                                <ul class="list-inline header-top pull-right">
                                    <li><a href="#"><i class="fa fa-envelope" aria-hidden="true"></i></a></li>
                                    <li>
                                        <a href="#" class="icon-info">
                                            <i class="fa fa-bell" aria-hidden="true"></i>
                                            <span class="label label-primary">3</span>
                                        </a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <img src="~/Images/admin-logo.png" alt="user">
                                            <b class="caret"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <div class="navbar-content">
                                                    @if (Session["Admin"] != null)
                                                    {
                                                        <span>@Session["TenQTV"].ToString()</span>
                                                        <p class="text-muted small">
                                                            @Session["EmailQTV"].ToString()
                                                        </p>
                                                    }
                                                    else
                                                    {
                                                        <span>Admin</span>
                                                        <p class="text-muted small">
                                                            ABC.Cinema.Admin@gmail.com
                                                        </p>
                                                    }
                                                    <div class="divider">
                                                    </div>
                                                    <a href="@Url.Action("change_Pass","Home", new {Id_TaiKhoan = Session["Id_TaiKhoan"]})" class="view add-project active"><span class="glyphicon glyphicon-pencil"></span> Đổi mật khẩu</a>
                                                    <a href="@Url.Action("Logout","Home")" class="view btn-sm btn-danger active"><span class="glyphicon glyphicon-log-out"></span> Đăng xuất</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </header>
                </div>
                <div class="user-dashboard">
                    @RenderBody()
                    @RenderSection("script", required: false)
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="add_project" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header login-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">Add Project</h4>
                </div>
                <div class="modal-body">
                    <input type="text" placeholder="Project Title" name="name">
                    <input type="text" placeholder="Post of Post" name="mail">
                    <input type="text" placeholder="Author" name="passsword">
                    <textarea placeholder="Desicrption"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="cancel" data-dismiss="modal">Close</button>
                    <button type="button" class="add-project" data-dismiss="modal">Save</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('[data-toggle="offcanvas"]').click(function () {
                $("#navigation").toggleClass("hidden-xs");
            });
        });
    </script>
</body>
</html>