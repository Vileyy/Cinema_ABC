@model ABC_Cinema.Models.LoaiPhim
@{
    ViewBag.Title = "Edit_TL";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN THỂ LOẠI PHIM</h2>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>
@using (Html.BeginForm("Edit_TL", "Phim", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã thể loại:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaTL" value="@Model.Id_LoaiPhim" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên thể loại:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenTL" value="@Model.TenLoai"
                       required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ THỂ LOẠI PHIM", "Index_TL")
</div>