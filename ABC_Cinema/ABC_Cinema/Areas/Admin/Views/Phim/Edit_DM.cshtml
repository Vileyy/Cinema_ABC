@model ABC_Cinema.Models.DanhMuc
@{
    ViewBag.Title = "Edit_DM";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN DANH MỤC PHIM</h2>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>
@using (Html.BeginForm("Edit_DM", "Phim", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã danh mục:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaDM" value="@Model.Id_DanhMuc" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên danh mục:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenDM" value="@Model.TenDanhMuc"
                       required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ DANH MỤC PHIM", "Index_DM")
</div>