@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quên mật khẩu</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/js")
    @Styles.Render("~/Content/Login/css")
</head>
<body>
    <div class="login">
        <div class="account-login">
            <h1>LẤY LẠI MẬT KHẨU</h1>
            <form action="@Url.Action("forget_Pass","Home")" method="post" class="login-form">
                <div class="text-danger">@ViewBag.ThongBao</div>
                <div class="form-group">
                    <input type="text" placeholder="Nhập Email" name="sEmail" class="form-control">
                </div>
                <span class="text-danger">@ViewBag.Email</span>
                <button type="submit" class="btn"><span class="glyphicon glyphicon-ok"></span> Gửi</button>
            </form>
        </div>
    </div>
</body>
</html>