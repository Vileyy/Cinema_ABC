@model ABC_Cinema.Models.TaiKhoan
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN QUẢN TRỊ VIÊN</h2>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>
@using (Html.BeginForm("Edit", "QuanTriVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã QTV:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaQTV" value="@Model.Id_TaiKhoan" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên tài khoản:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenTK" value="@Model.TenDangNhap"
                       readonly />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên QTV:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenQTV" value="@Model.ThongTin.TenNguoiDung"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Giới tính:</label>
            <div class="col-md-10">
                <select name="bGioiTinh" required>
                    <option @if (Model.ThongTin.GioiTinh == true) { <text> selected</text> } value="1">Nam</option>
                    <option @if (Model.ThongTin.GioiTinh == false) { <text> selected</text> } value="0">Nữ</option>
                    <option @if (Model.ThongTin.GioiTinh != true && Model.ThongTin.GioiTinh != false) { <text> selected</text> } value="">-- Chọn giới tính --</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ngày sinh:</label>
            <div class="col-md-10">
                @{
                    string ngaySinhValue = Model.ThongTin.NgaySinh?.ToString("yyyy-MM-dd") ?? string.Empty;
                }
                <input type="date" name="dNgaySinh" value="@ngaySinhValue" required />
                <span class="text-danger">@ViewBag.NgaySinh</span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDiaChi" value="@Model.ThongTin.DiaChi" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Email:</label>
            <div class="col-md-10">
                <input type="email" size="70" name="sEmail" value="@Model.ThongTin.Email"
                       readonly />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ QUẢN TRỊ VIÊN", "Index")
</div>
