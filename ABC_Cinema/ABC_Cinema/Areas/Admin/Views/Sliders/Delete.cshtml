@model ABC_Cinema.Models.Slider
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3 style="color: red; font-weight: bold;">Bạn quyết định xóa slider này?</h3>
<h4 style="color: red; font-weight: bold;">@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã slider:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id_Slider)
        </dd>

        <dt>
            Tên phim:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phim.TenPhim)
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img style="width: 200px; margin-bottom: 20px;" src="~/Images/Slider/@Model.AnhSlider" alt=" @Model.Phim.TenPhim">
        </dd>

        <dt>
            Trạng thái:
        </dt>

        <dd>
            @if (Model.TrangThai == true)
            {
                <p>Hiển thị</p>
            }
            else if (Model.TrangThai == false)
            {
                <p>Ẩn</p>
            }
            else
            {
                <p>N/A</p>
            }
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> | @Html.ActionLink("VỀ TRANG QUẢN LÝ SLIDER", "Index")
        </div>
    }
</div>
